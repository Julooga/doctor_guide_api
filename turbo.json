{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": false
  },
  "tasks": {
    "format": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {},
    "@julooga/web#build": {
      "outputs": ["build/client/**"]
    },
    "@jurloogar/doctor_guide_api#build": {
      "outputs": ["dist/index.js", "dist/openapi.json"]
    },
    "@julooga/sdk#build": {
      "dependsOn": ["@julooga/infra#build"],
      "outputs": ["dist/index.ts"]
    },
    "deploy": {},
    "@julooga/infra#deploy": {
      "dependsOn": ["@julooga/web#build", "@jurloogar/doctor_guide_api#build"],
      "cache": false,
      "inputs": [
        "index.ts",
        "bedrock.ts",
        "Pulumi.*.yaml",
        "../../apps/api/dist/**",
        "../../apps/web/build/client/**"
      ]
    }
  }
}
